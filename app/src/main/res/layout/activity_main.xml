<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_display" android:textSize="36sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:gravity="right"/>
    <Button
            android:text="CE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_ce" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_display" android:tag="ce"/>
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_c" app:layout_constraintStart_toEndOf="@+id/button_ce"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_ce" android:tag="c"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_7" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_ce" android:layout_marginTop="8dp" android:tag="7"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_8"
            app:layout_constraintStart_toEndOf="@+id/button_7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_7" android:tag="8"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_9"
            app:layout_constraintTop_toTopOf="@+id/button_8" app:layout_constraintStart_toEndOf="@+id/button_8"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:tag="9"/>
    <Button
            android:text="ร"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_mul" app:layout_constraintStart_toEndOf="@+id/button_9"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_9" android:textSize="18sp" android:tag="mul"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_7" android:layout_marginTop="8dp" android:tag="4"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_5" app:layout_constraintStart_toEndOf="@+id/button_4"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_4" android:tag="5"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_6" app:layout_constraintStart_toEndOf="@+id/button_5"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_5" android:tag="6"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_minus"
            app:layout_constraintTop_toTopOf="@+id/button_6" app:layout_constraintStart_toEndOf="@+id/button_6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            android:tag="minus"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:tag="1"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_2"
            app:layout_constraintTop_toTopOf="@+id/button_1" app:layout_constraintStart_toEndOf="@+id/button_1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:tag="2"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_3"
            app:layout_constraintTop_toTopOf="@+id/button_2" app:layout_constraintStart_toEndOf="@+id/button_2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:tag="3"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_plus"
            app:layout_constraintTop_toTopOf="@+id/button_3" app:layout_constraintStart_toEndOf="@+id/button_3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            android:tag="plus"/>
    <Button
            android:text="รท"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_div" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_mul" app:layout_constraintStart_toStartOf="@+id/button_mul"
            android:textSize="18sp" android:tag="div"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:tag="0"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_equal" app:layout_constraintStart_toStartOf="@+id/button_plus"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_plus" android:tag="equal"/>
</android.support.constraint.ConstraintLayout>